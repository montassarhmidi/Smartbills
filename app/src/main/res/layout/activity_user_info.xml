<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".settings.UserInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/alegreya_sans"
                android:padding="5dp"
                android:text="@string/ac_name" />

            <EditText
                android:id="@+id/etxt_ac_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/alegreya_sans"
                android:hint="@string/ac_name"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="@color/blue_700"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:fontFamily="@font/alegreya_sans"
                android:padding="5dp"
                android:text="@string/ac_phone" />

            <EditText
                android:id="@+id/etxt_ac_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="22dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="35dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/alegreya_sans"
                android:hint="@string/ac_phone"
                android:inputType="phone"
                android:padding="16dp"
                android:textColor="@color/blue_700"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/alegreya_sans"
                android:padding="5dp"
                android:text="@string/ac_email" />

            <EditText
                android:id="@+id/etxt_ac_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/alegreya_sans"
                android:hint="@string/ac_email"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="@color/blue_700"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/alegreya_sans"
                android:padding="5dp"
                android:text="@string/ac_address" />

            <EditText
                android:id="@+id/etxt_ac_address"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/alegreya_sans"
                android:gravity="start"
                android:hint="@string/ac_address"
                android:inputType="textMultiLine"
                android:padding="16dp"
                android:textColor="@color/blue_700"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/alegreya_sans"
                android:padding="5dp"
                android:text="@string/ac_currency" />

            <EditText
                android:id="@+id/etxt_ac_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/alegreya_sans"
                android:hint="@string/ac_currency"
                android:inputType="text"
                android:maxLength="4"
                android:padding="16dp"
                android:textColor="@color/blue_700"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/alegreya_sans"
                android:padding="5dp"
                android:text="@string/ac_tax" />

            <EditText
                android:id="@+id/etxt_tax"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/round_border"
                android:fontFamily="@font/alegreya_sans"
                android:hint="@string/ac_tax"
                android:inputType="numberDecimal"
                android:maxLength="4"
                android:padding="16dp"
                android:textColor="@color/blue_700"
                android:textSize="16dp" />

            <Button
                android:id="@+id/editButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/alegreya_sans"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/edit"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/updateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="40dp"
                android:fontFamily="@font/alegreya_sans"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/update"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="#E53935"
                android:fontFamily="@font/alegreya_sans"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/cancel"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>